<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Issue Title</th>
      <th>Project</th>
      <th>Issue Priority</th>
      <th>Issue Status</th>
      <th>Issue Creator</th>
      <th>Issue Assigned</th>
      <th>Updated at</th> 
      <th> Edit</th>
      <th> Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.issue_title %></td>
        <td><%= issue.project.project_name %></td>
        <td><%= issue.issue_priority.name %></td>
        <td><%= issue.issue_status.name %></td> 
        <td><%= issue.issue_creator.first_name + " " + issue.issue_creator.last_name %></td> 
        <td><%= issue.issue_assigned.first_name + " " + issue.issue_assigned.last_name %></td> 
        <td><%= issue.last_updated_at.to_date %></td> 
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Delete', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @issues, renderer: BootstrapPagination::Rails %>
